*
	margin 0
	padding 0
	font-family Microsoft Yahei
body
	.all
		margin 50px auto
		width 1350px
		.top
			height 40px
			line-height 38px
			font-size 14px
			background-color rgb(245,245,245)
			border 1px solid rgb(223,223,223)
			color rgb(109,109,109)
			div
				float left
			.title
				padding 0 20px
				border-right 1px solid rgb(245,245,245)
				// &:first-child
				// 	background-color white
				// 	border-right 1px solid rgb(223,223,223)
				// 	color rgb(255,85,0)
				&:hover
					margin -1px 0 0 -1px
					color rgb(255,85,0)
					border 1px solid rgb(223,223,223)
					background-color white
				&.jia
					margin -1px 0 0 -1px
					background-color white
					color rgb(255,68,0)
					border 1px solid rgb(223,223,223)
			.qujian
				padding 0 10px
				border-right 1px solid rgb(245,245,245)
				&:hover
					margin -1px 0 0 -1px
					background-color white
					border 1px solid rgb(204,204,204)
				.money
					width 53px
					height 21px
					background-color white
					color rgb(169,169,169)
					border 1px solid rgb(223,223,223)
				.queding
					width 44px
					height 23px
					color white
					margin-left 5px
					background-color rgb(255,68,0)
					border-radius 3px
					display none
			.suozai
				float right
				margin-right 200px
				padding 0 20px
				border-right 1px solid rgb(245,245,245)
				position relative
				&:hover
					height 40px
					margin-top -1px
					border 1px solid rgb(204,204,204)
					border-bottom none
					background-color white
				.city
					position absolute
					top 38px
					left -1px
					width 355px
					height 355px
					border 1px solid rgb(204,204,204)
					background-color white
					display none
					
			.fanye
				float right
				margin-right -270px
				a
					&:last-child:hover
						color rgb(255,68,0)
		.main
			.bao
				.one
					position relative
					margin-top 20px
					float left
					width 250px
					height 390px
					margin-right 20px
					border 1px solid rgb(237,237,237)
					z-index -1
					&:hover
						border 1px solid rgb(255,68,0)
					.tupian
						z-index -1
						position relative
						//overflow-y hidden
						&:hover .zhao
							transform translateY(-40px)
						a
							img
								width 248px
								height 250px
						.zhao
							position absolute
							top 252px
							width 248px
							height 40px
							line-height 40px
							background-color rgba(255,68,0,0.5)
							color white
							transition 0.5s
							span
								display inline-block
								width 124px
								text-align center
								border-right 1px solid gray				
					.gai
						position absolute
						z-index 2
						background-color white
						padding 0 10px
						.baoyou
							margin-top 15px
							color #F40
							span
								font-size 18px
								font-weight bold		
							label
								position relative
								top -2px
								left 5px
								font-size 12px
								background-color #F40
								color white
								padding 0px 2px
								z-index -1
						.zi
							margin-top 10px
							a
								font-size 12px
						.dizhi
							font-size 12px
							color rgb(136,136,136)
							margin-top 12px
							span
								float right
						.xiaoliang
							font-size 14px
							display inline-block
							margin-top 10px
							color rgb(136,136,136)
						.goumai
							margin-top 10px
							float right
							width 50px
							height 20px
							text-align center
							line-height 20px
							background-color #F40
							color white
							border-radius 3px
					
						
						
						
					
		